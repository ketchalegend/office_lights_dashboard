<form style="display: inline" method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Bist du dir sicher, dass du diesen Nutzer löschen möchtest?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="uk-button uk-button-small uk-button-danger">Löschen</button>
</form>
