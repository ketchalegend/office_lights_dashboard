<form style="display: inline" method="post" action="{{ path('site_config_delete', {'id': site_config.id}) }}" onsubmit="return confirm('Bist du dir sicher, dass du diesen Eintrag löschen möchtest?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ site_config.id) }}">
    <button class="uk-button uk-button-small uk-button-danger">Löschen</button>
</form>